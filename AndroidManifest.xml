<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makewall.phatjoe50"
    android:versionCode="4"
    android:versionName="3.1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/photo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.makewall.phatjoe50.BackSound"
            android:label="MakeWall" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu"
            android:label="Select wetin you want" >
            <intent-filter>
                <action android:name="com.makewall.phatjoe50.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs"
            android:label="Help this App grow"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.makewall.phatjoe50.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Prefs"
            android:label="Prefences" >
            <intent-filter>
                <action android:name="com.makewall.phatjoe50.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeWall"
            android:label="Wallpaper Application in pigin"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Instructions"
            android:label="How to use MakeWall" >
        </activity>
        <activity
            android:name=".Bonuses"
            android:label="Check Device Density"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".About"
            android:label="About Me" >
        </activity>
        <activity
            android:name=".MakeWallGallery"
            android:label="Set Wallpaper from MakeWallGallery" >
        </activity>
        <activity
            android:name=".ImageGallery"
            android:label="Set Wallpaper from your phone Gallery" >
        </activity>
    </application>

</manifest>